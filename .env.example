# Environment variables for local development
# Copy this file to .env and fill in your values

# GitHub Personal Access Token for AI chat functionality
# Generate one at: https://github.com/settings/tokens
# Requires no special scopes - just basic access
GITHUB_TOKEN=your_github_personal_access_token_here

# OAuth Configuration
# Session secret for secure sessions (change this in production!)
SESSION_SECRET=your-super-secret-session-key-change-in-production

# GitHub OAuth App settings
# Create an OAuth App at: https://github.com/settings/applications/new
GITHUB_CLIENT_ID=your_github_oauth_client_id
GITHUB_CLIENT_SECRET=your_github_oauth_client_secret
GITHUB_CALLBACK_URL=http://localhost:3000/auth/github/callback

# Google OAuth settings
# Create credentials at: https://console.cloud.google.com/apis/credentials
GOOGLE_CLIENT_ID=your_google_oauth_client_id
GOOGLE_CLIENT_SECRET=your_google_oauth_client_secret
GOOGLE_CALLBACK_URL=http://localhost:3000/auth/google/callback

# Optional: Override default port (defaults to 3000)
# PORT=3000